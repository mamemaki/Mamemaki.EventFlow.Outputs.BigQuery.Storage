# Editor configuration, see http://editorconfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{css,scss,js,ts,vue,html,cshtml}]
charset = utf-8-bom
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

# CSharp code style settings:
[*.cs]
charset = utf-8-bom
indent_style = space
indent_size = 4
dotnet_style_object_initializer = true:silent
csharp_style_inlined_variable_declaration = true:silent
csharp_style_pattern_local_over_anonymous_function = true:silent
dotnet_prefer_inferred_anonymous_type_member_names = true:silent
dotnet_style_prefer_inferred_anonymous_type_member_names = true:none
csharp_style_var_elsewhere = true:none
csharp_style_var_when_type_is_apparent = true:none
csharp_style_var_for_built_in_types = true:none
csharp_prefer_simple_using_statement = true:none
csharp_style_throw_expression = true:none
dotnet_diagnostic.IDE0251.severity = none
dotnet_diagnostic.xUnit1026.severity = none
dotnet_diagnostic.CA1822.severity = none
dotnet_diagnostic.IDE0270.severity = none
dotnet_diagnostic.IDE0090.severity = none
dotnet_diagnostic.IDE0028.severity = none
dotnet_diagnostic.IDE0300.severity = none
dotnet_diagnostic.CA1861.severity = none
dotnet_diagnostic.SYSLIB1045.severity = none
dotnet_diagnostic.IDE1006.severity = none
dotnet_diagnostic.IDE0290.severity = none
